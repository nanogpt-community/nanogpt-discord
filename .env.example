# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_client_id_here

# NanoGPT API Configuration
NANOGPT_API_KEY=your_nanogpt_api_key_here

# Bot Settings
DEFAULT_MODEL=zai-org/glm-4.6v
SYSTEM_PROMPT=

# Feature Toggles (false = enabled, true = disabled, admin = admin-only)
DISABLE_WEBSEARCH=false
DISABLE_DEEPSEARCH=false
DISABLE_IMAGEGEN=false
DISABLE_SCRAPE=false

# Permissions
# Comma-separated Discord user IDs who can manage server-wide contexts (in addition to admins)
CONTEXT_ADMIN_USERS=

# Database Path (for Docker)
DATABASE_PATH=./data/bot.db
